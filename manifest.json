{
  "manifest_version": 2,
  "name": "Daifuku Translator",
  "version": "0.4.5",
  "description": "選取文字後使用LLM進行翻譯。",

  "browser_specific_settings": {
    "gecko": {
      "id": "Daifuku-Translator@JaniceC001",
      "strict_min_version": "113.0"
    }
  },

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "*://generativelanguage.googleapis.com/*",
    "*://api.mistral.ai/*"
  ],

  "background": {
    "scripts": ["background/background.js"],
    "persisitent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/purify.min.js",
        "content/content_script.js"
      ],
      "css": ["content/content_style.css"]
    }
  ],

  "options_ui": {
    "page": "option_page/option.html",
    "open_in_tab": true 
  },


    "browser_action": {
    "default_icon": {
        "512": "icons/icon.png"
    },
    "default_title": "Daifuku_Translator"
    }
}